@model ShopTARge22.Models.Realestates.RealestatesImageViewModel

<form asp-action="DeleteImageFromDatabase">
    <div class="form-group row col-sm-4 offset-2 text-center">
        <input type="hidden" asp-for="@Model.ImageId" />
        <div class="mb-2"> @Model.ImageTitle </div>
        <img class="card-img-top mb-3" src="@Model.Image" asp-append-version="true" />
        <div class="d-flex justify-content-center mb-3">
           <input type="submit" value="Delete image" class="btn btn-danger btn-sm" style="width: 100px;" />
        </div>
    </div>
</form>


