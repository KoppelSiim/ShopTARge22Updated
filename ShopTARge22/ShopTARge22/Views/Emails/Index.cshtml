

<div class="container">
    <h1>Send email</h1>
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5 mb-2">
                <label style="font-family: Arial">To</label>
                <input class="form-control" />
            </div>
            <div class="form-group col-md-offset-3 col-md-5 mb-2">
                <label style="font-family: Arial">Subject</label>
                <input class="form-control" />
            </div>
            <div class="form-group col-md-offset-3 col-md-5 mb-2">
                <label style="font-family: Arial">Body</label>
                <input class="form-control" />
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Emails" asp-action="SendEmail" class="button special small">Send email</button>
            </div>
        </div>
    </form>
</div>