@model IEnumerable<ShopTARge22.Models.Kindergartens.KindergartensIndexViewModel>

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="Kindergartens" type="submit" class="button special small">Create</a>
</div>

<div class="h1 align-center">
    Kindergartens
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">GroupName</th>
                <th scope="col">ChildrenCount</th>
                <th scope="col">KindergartenName</th>
                <th scope="col">Teacher</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergartens in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@kindergartens.GroupName</td>
                    <td>@kindergartens.ChildrenCount</td>
                    <td>@kindergartens.KindergartenName</td>
                    <td>@kindergartens.Teacher</td>
                   
                    <td>
                        <a asp-action="details" asp-controller="kindergartens" asp-route-id="@kindergartens.Id" class="button small">Details</a>
                        <a asp-action="update" asp-controller="kindergartens" asp-route-id="@kindergartens.Id" class="button small">Update</a>
                        <a asp-action="delete" asp-controller="kindergartens" asp-route-id="@kindergartens.Id" class="button small">Delete</a>
                    </td>
                </tr>

                rowNumber += 1;
            }
        </tbody>
    </table>
</form>